      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    }
